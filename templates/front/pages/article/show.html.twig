{% extends 'front/layouts/base.html.twig' %}

{% import 'front/macros/links/taxonomy-link-list.html.twig' as taxonomyLinks %}

{% block title %}{{ article.title }} | LogBook{% endblock %}

{% block body %}
    <section class="section">
        <div class="container">
            <article id="article-{{ article.id }}" class="row mb-4">
                <div class="col-lg-10 mx-auto mb-4">
                    <h1 class="title h2 mb-3">{{ article.title }}</h1>
                    <ul class="list-inline post-meta mb-3">
                        <li class="list-inline-item"><i class="ti-user mr-2"></i><a href="author.html">John Doe</a></li>
                        <li class="list-inline-item">Date : {{ article.createdAt|date("F d, Y") }}</li>
                        {% if article.category %}
                            <li class="list-inline-item">Category : <a href="{{ path('category_listing', {slug: article.category.slug}) }}" class="ml-1">{{ article.category.title }} </a></li>
                        {% endif %}
                        {% if article.tags %}
                            <li class="list-inline-item">Tags :
                                {{ taxonomyLinks.generate(article.tags, 'tag_show') }}
                            </li>
                        {% endif %}
                    </ul>
                </div>
                <div class="col-12 mb-3">
                    <div class="post-slider">
                        <img src="https://picsum.photos/1200/600" class="img-fluid media" alt="title image">
                    </div>
                </div>
                <div class="col-lg-10 mx-auto">
                    <div class="content">
                        {{ article.content|raw }}
                    </div>
                </div>
            </article>
        </div>
    </section>
{% endblock %}