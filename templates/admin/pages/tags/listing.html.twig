{% extends 'admin/layouts/base.html.twig' %}

{% block title %}Tags{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                {% include 'admin/partials/block/alert/_alert-messages.html.twig' %}
                <div class="card-header d-flex align-items-center">
                    <h5 class="card-title fw-semibold">Tags</h5>
                    <div class="button-container ms-auto">
                        {% if routes.add is defined %}
                            <a href="{{ path(routes.add) }}" class="btn btn-primary">Create</a>
                        {% endif %}
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table text-nowrap mb-0 align-middle">
                                <thead class="text-dark fs-4">
                                    <tr>
                                        <th class="border-bottom-0">
                                            <h6 class="fw-semibold mb-0">Id</h6>
                                        </th>
                                        <th class="border-bottom-0">
                                            <h6 class="fw-semibold mb-0">Title</h6>
                                        </th>
                                        <th class="border-bottom-0">
                                            <h6 class="fw-semibold mb-0">Actions</h6>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for tag in pager %}
                                    <tr class="items-rows tag-{{ tag.id }}">
                                        <td class="border-bottom-0"><h6 class="fw-semibold mb-0">{{ tag.id }}</h6></td>
                                        <td class="border-bottom-0">
                                            <h6 class="fw-semibold mb-1">{{ tag.title }}</h6>
                                        </td>
                                        <td class="border-bottom-0">
                                            <ul class="d-flex mb-0s">
                                                <li class="ms-1"><a href="{{ path('admin_edit_tag', {id: tag.id}) }}" class="btn btn-primary" title="Edit"><i class="ti ti-edit"></i></a></li>
                                                <li class="ms-1"><a href="{{ path('admin_delete_tag', {id: tag.id}) }}" class="btn btn-danger" title="Delete"><i class="ti ti-trash"></i></a></li>
                                                <li class="ms-1"><a href="{{ path('tag_show', {slug: tag.slug}) }}" class="btn btn-dark" title="View"><i class="ti ti-eye"></i></a></li>
                                            </ul>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="d-flex align-items-center px-4">
                    {{ pagerfanta(pager, {'prev_message': '<', 'next_message': '>'}) }}
                    <div class="ms-auto">
                        <p class="fs-2">{{ pagerInfo(pager) }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}